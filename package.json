{
	"name": "@technologiestiftung/eslint-plugin",
	"version": "0.1.1",
	"description": "ESLint plugin for Technologiestitung",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 0",
		"lint": "ESLINT_USE_FLAT_CONFIG=true eslint ."
	},
	"files": [
		"index.js",
		"README.md",
		"LICENSE"
	],
	"prettier": {
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"useTabs": true,
		"printWidth": 80,
		"overrides": [
			{
				"files": [
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"keywords": [
		"eslint",
		"eslint-plugin",
		"technologiestitung"
	],
	"author": "ff6347 <hash@ff6347.email>",
	"license": "MIT",
	"devDependencies": {
		"@technologiestiftung/semantic-release-config": "1.2.4",
		"eslint": "9.13.0",
		"eslint-plugin-eslint-plugin": "6.2.0",
		"semantic-release": "24.1.3"
	},
	"peerDependencies": {
		"eslint": ">= 8.57.0"
	}
}
