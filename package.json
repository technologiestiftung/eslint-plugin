{
	"name": "@technologiestiftung/eslint-plugin",
	"version": "0.1.0",
	"description": "ESLint plugin for Technologiestitung",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint": "ESLINT_USE_FLAT_CONFIG=true eslint ."
	},
	"files": ["index.js", "README.md", "LICENSE"],
	"prettier": {
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"useTabs": true,
		"printWidth": 80,
		"overrides": [
			{
				"files": ["*.yml", "*.yaml"],
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"keywords": ["eslint", "eslint-plugin", "technologiestitung"],
	"author": "ff6347 <hash@ff6347.email>",
	"license": "MIT",
	"devDependencies": {
		"@technologiestiftung/semantic-release-config": "1.2.4",
		"eslint": "8.57.0",
		"eslint-plugin-eslint-plugin": "5.4.0",
		"semantic-release": "23.0.2"
	},
	"peerDependencies": {
		"eslint": ">= 8.57.0"
	}
}
